<div id="message-container">
  <% if @message.blank? %>
  <p>There are not any messages currently in the system.</p>
  <% else %>
  <h1 style="text-align:center;">Messages</h1>
    <hr class="my-4">
     <% @message.each do |s| %>
     <div class="alert alert-dismissible <%= 'alert-primary' if s.home == false %> <%= 'alert-danger' if s.home == true %> " style="font-color:#FFF">
       <h4 class="alert-heading"><%= s.title %></h4>
       <p> <%= s.body %></p>
       <% if s.start_date.present? %>
         <h5>Start Time: <%= s.start_date.strftime("%A %B %d, %Y at %I:%M %p") %></h5>
       <% end %>
       <% if s.end_date.present? %>
        <h5>End Time: <%= s.end_date.strftime("%A %B %d, %Y at %I:%M %p") %></h5>
       <% end %>
     </br>
      <% if s.home == false %>
        <h5>This message will not appear on the homepage. Click 'Edit' to change.</h5>
      <% else %>
          <h5>This message is currently being displayed on the homepage. Click 'Edit' to change.</h5>
      <% end %>
       <%= link_to 'Edit', {:action => "edit", :id => s.id}, class:"btn btn-primary btn-lg" %>
       <%= link_to "Delete", {:action => 'delete', :id => s.id}, class:"btn btn-danger btn-lg", data: {confirm: "Are you sure you want to delete this school?"}  %>
     </div>
     <% end %>
  <% end %>
</br>
  <div style="text-align:center;">
    <%= link_to "Add New Message", {:action => 'new' }, class:"btn btn-primary btn-lg"%>
  </div>
</br>
</div>
