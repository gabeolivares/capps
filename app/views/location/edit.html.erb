<div id="edit-school">

  <%= form_for @location, :url =>{:action => "update", :id =>@location} do |f| %>
    <h1>Edit <%= @location.name %></h1>
    <div class="field" style="text-align: left;">
      <label for = "location_name">Name</label>:
      <%= f.text_field 'name',required: true, class:"form-control form-control-lg" %>
    </div>
    <div class="field" style="text-align: left;">
      <label for = "location_address1">Address 1</label>:
      <%= f.text_field 'address1',required: true, class:"form-control form-control-lg" %>
    </div>
    <div class="field" style="text-align: left;">
      <label for = "location_address2">Address 2</label>:
      <%= f.text_field 'address2',required: true, class:"form-control form-control-lg" %>
    </div>
  </br>

  <%= f.submit "Save changes", class:"btn btn-primary btn-lg btn-block" %>
  <% end %>
  </br>
    <%= link_to 'Back', {:action => 'index'} , class:"btn btn-danger btn-lg btn-block" %>
</div>
