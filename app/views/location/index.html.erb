<div id="location-container">
  <% if @location.blank? %>
  <p>There are not any locations currently in the system.</p>
  <% else %>
  <h1 style="text-align:center;">Locations</h1>
    <hr class="my-4">
    <table class="table table-hover">
      <thead>
        <tr class="table-light">
          <th scope="col">Name</th>
          <th scope="col">Address</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @location.each do |l| %>
        <tr class="table-light">
          <th scope="row"><%= l.name %></th>
          <td><%= l.address1 %></br><%= l.address2 %></td>
          <td style="float:right;"><%= link_to 'Edit', {:action => "edit", :id => l.id}, class:"btn btn-primary btn-lg" %>
          <%= link_to "Delete", {:action => 'delete', :id => l.id}, class:"btn btn-danger btn-lg", data: {confirm: "Are you sure you want to delete this location?"}  %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</br>
  <div style="text-align:center;">
    <%= link_to "Add New Location", {:action => 'new' }, class:"btn btn-primary btn-lg"%>
  </div>
</br>
</div>
