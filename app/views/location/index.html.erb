<div id="location-container">
  <% if @location.blank? %>
  <p>There are not any locations currently in the system.</p>
  <% else %>
  <h1 style="text-align:center;">Locations</h1>


     <% @location.each do |l| %>
     <div class="card border-primary mb-3 school-box">
      <div class="card-header"><%= l.name %></div>
        <div class="card-body">
          <%= l.address1 %></br>
          <%= l.address2 %></br>
        </br>
          <%= link_to 'Edit', {:action => "edit", :id => l.id}, class:"btn btn-primary btn-lg" %>
          <%= link_to "Delete", {:action => 'delete', :id => l.id}, class:"btn btn-danger btn-lg", data: {confirm: "Are you sure you want to delete this location?"}  %>
        </div>
      </div>
     <% end %>
  <% end %>
</br>
  <div style="text-align:center;">
    <%= link_to "Add New Location", {:action => 'new' }, class:"btn btn-primary btn-lg"%>
  </div>
</br>
</div>
