<div id="edit-school">

  <%= form_for @school, :url =>{:action => "update", :id =>@school} do |f| %>

    <h1>Edit <%= @school.name %></h1>
    <div class="field" style="text-align: left;">
      <label for = "school_name">Name</label>:
      <%= f.text_field 'name', class:"form-control form-control-lg" %>
    </div>
    <div class="field" style="text-align: left;">
      <label for = "school_nickname">Nickname</label>:
      <%= f.text_field 'nickname', class:"form-control form-control-lg" %>
    </div>
    <div class="field" style="text-align: left;">
      <label for = "school_address">Address</label>:
      <%= f.text_field 'address', class:"form-control form-control-lg" %>
    </div>
    <div class="field" style="text-align: left;">
      <label for = "school_mascot">Mascot</label>:
      <%= f.text_field 'mascot', class:"form-control form-control-lg" %>
    </div>
    <div class="field" style="text-align: left;">
      <label for = "school_website">Website</label>:
      <%= f.text_field 'website', class:"form-control form-control-lg" %>
    </div>
  </br>

  <%= f.submit "Save changes", class:"btn btn-primary btn-lg btn-block" %>
  <% end %>
  </br>
    <%= link_to 'Back', {:action => 'index'} , class:"btn btn-danger btn-lg btn-block" %>
</div>
