<div id="create-new-school">
  <h1>Add New School</h1>

  <%= form_tag :action => 'create' do %>
    <div class="field" style="text-align: left;">
      <label for = "school_name">Name</label>:
      <%= text_field 'school', 'name', class:"form-control form-control-lg" %>
    </div>
    <div class="field" style="text-align: left;">
      <label for = "school_nickname">Nickname</label>:
      <%= text_field 'school', 'nickname', class:"form-control form-control-lg" %>
    </div>
    <div class="field" style="text-align: left;">
      <label for = "school_address">Address</label>:
      <%= text_field 'school', 'address', class:"form-control form-control-lg" %>
    </div>
    <div class="field" style="text-align: left;">
      <label for = "school_mascot">Mascot</label>:
      <%= text_field 'school', 'mascot', class:"form-control form-control-lg" %>
    </div>
    <div class="field" style="text-align: left;">
      <label for = "school_website">Website</label>:
      <%= text_field 'school', 'website', class:"form-control form-control-lg" %>
    </div>
  </br>
  <%= submit_tag "Create" , class:"btn btn-primary btn-lg btn-block"%>
  <% end -%>
</br>
  <%= link_to 'Back', {:action => 'index'} , class:"btn btn-danger btn-lg btn-block" %>
</div>
