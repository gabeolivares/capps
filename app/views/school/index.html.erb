<div id="school-container">
  <% if @school.blank? %>
  <p>There are not any schools currently in the system.</p>
  <% else %>
  <h1 style="text-align:center;">Schools</h1>


     <% @school.each do |s| %>
     <div class="card border-primary mb-3 school-box">
      <div class="card-header"><%= s.name %></div>
        <div class="card-body">
          <%= s.nickname %></br>
          <%= s.address %></br>
          <%= s.mascot %></br>
          <%= s.website %></br>
        </br>
          <%= link_to 'Edit', {:action => "edit", :id => s.id}, class:"btn btn-primary btn-lg" %>
          <%= link_to "Delete", {:action => 'delete', :id => s.id}, class:"btn btn-danger btn-lg", data: {confirm: "Are you sure you want to delete this item?"}  %>
        </div>
      </div>
     <% end %>
  <% end %>
</br>
  <div style="text-align:center;">
    <%= link_to "Add New School", {:action => 'new' }, class:"btn btn-primary btn-lg"%>
  </div>
</br>
</div>
