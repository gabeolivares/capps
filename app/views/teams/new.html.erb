<div id="create-new-location">
  <h1>Split Teams</h1>

  <%= form_tag :action => 'create' do %>
    <div class="field" style="text-align: left;">
      <label for = "name1">Team One Name</label>:
      <%= text_field 'team', 'name1', required: true, class:"form-control form-control-lg" %>
    </div>
    <div class="field" style="text-align: left;">
      <label for = "name2">Team Two Name</label>:
      <%= text_field 'team', 'name2', required: true, class:"form-control form-control-lg" %>
    </div>
  </br>
  <div class="field" style="text-align: left;">
    <label for = "message_home">Show Split Teams </label>:
  </br>
    <%= label :home, "Yes", value: true %>
    <%= radio_button 'team', 'hidden', true, :checked => true, :value => true %>
  </br>
    <%= label :home, "No", value: false %>
    <%= radio_button 'team', 'hidden', false, :value => false %>
    <%= hidden_field_tag "division_name", params['division_name'] %>
    <%= hidden_field_tag "division_grade", params['division_grade'] %>
    <%= hidden_field_tag "school_id", params['school_id'] %>
    <%= hidden_field_tag "sport_id", params['sport_id'] %>
  </div></br>
  <%= submit_tag "Create" , class:"btn btn-primary btn-lg btn-block"%>
  <% end -%>
</br>
  <%= link_to 'Back',{:action => 'show', id: params['sport_id'], division_grade: params['division_grade'], division_name: params['division_name']}, class:"btn btn-danger btn-lg btn-block" %>
</div>
